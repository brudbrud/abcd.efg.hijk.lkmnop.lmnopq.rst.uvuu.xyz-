@import '../uvuu'

trikto = 20em
hand = 20em
gray = #aaaaaa


body
  background gray
  color white
  padding 4em 0
  font-family: "baroque-text",sans-serif;


p  
  font-size 2.4em
  line-height 1.3
  text-shadow 4px 4px black
  animation shadow-play 1s infinite linear
  



ul
  list-style-type none


::-webkit-scrollbar-track
  background white

::-webkit-scrollbar-thumb
  background gray  

  
.wrapper
  max-width trikto
  margin auto
  padding 0 2em

  
.trikto
  display block
  height hand
  max-width 0
  margin auto



  
.sec
.min
.hour
  position absolute
  height hand
  border 1px solid white
  background gray


    
.polyptych
  filter invert(100%)

  img
    display block
    max-width 70%
    margin 0 auto

    
.kalender
  color gray
  text-shadow 0.1em 0.1em white, 0.2em 0.2em black, 0.3em 0.3em white
  
.clock
.polyptych
  margin 0 0 8em 0

  
@keyframes spin
  100%
    transform rotate(-360deg)

@keyframes shadow-play
  0%
    text-shadow 3px 3px black
  25%
    text-shadow 3px -3px black
  50%
    text-shadow -3px -3px black
  75%
    text-shadow -3px 3px black
  100%
    text-shadow 3px 3px black
