@import url('https://fonts.googleapis.com/css?family=Raleway:300')

body
  font-family: Raleway,  sans-serif
  font-weight 300
  animation cmyk 60s linear infinite
  font-size 16px

::-webkit-scrollbar
  width 1em

::-webkit-scrollbar-track
  background white

::-webkit-scrollbar-thumb
  background black  

article
  animation cmyk-text 60s linear infinite      
    
marquee
  height 100%
  width 100%

  img
    animation spin 60s linear infinite
  

ul
  list-style-type none
  
a
  text-decoration none
  
@keyframes cmyk
  0%
    background cyan
  16.66%
    background magenta  
  33%
    background yellow  
  50%
    background black  
  66.66%
    background yellow
  83.33%
    background magenta  
  100%
    background cyan  


@keyframes cmyk-text
  0%
    color cyan
  16.66%
    color magenta  
  33%
    color yellow  
  50%
    color black  
  66.66%
    color yellow
  83.33%
    color magenta  
  100%
    color cyan  

        
.flying-carpet
  position fixed
  width 100%
  height 100%
  z-index 9999

  a
    text-decoration none
    display inline

  img
    max-width 130px
    padding 50px
    animation spin 60s linear infinite

@keyframes spin
  100%
    transform rotate(360deg)
